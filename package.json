{
  "name": "new_home_page",
  "version": "1.0.0",
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "postbuild": "npm run copy-static-files",
    "copy-static-files": "node ./copy-static-files.js",
    "build:html": "node build.js",
    "build:css": "tailwindcss -i src/style/tailwind.css -o dist/style.css --minify",
    "build": "npm run build:css && npm run build:html",
    "dev": "npm run build && npx http-server dist -p 8000 -c-1",
    "watch": "concurrently \"tailwindcss -i src/style/tailwind.css -o dist/style.css --watch\" \"nodemon --watch src --ext njk,html --exec 'npm run build:html'\"",
    "serve": "npx http-server dist -p 8000 -c-1",
    "format": "npx prettier --write \"src/**/*.njk\" \"src/**/*.html\"",
    "format:check": "npx prettier --check \"src/**/*.njk\" \"src/**/*.html\"",
    "test": "node --test tests/*test.js"
  },
  "devDependencies": {
    "autoprefixer": "10.4.21",
    "browserslist": "4.25.1",
    "concurrently": "^9.2.0",
    "http-server": "^14.1.1",
    "nodemon": "^3.1.10",
    "nunjucks-cli": "^1.0.0",
    "prettier": "^3.6.2",
    "puppeteer": "^24.4.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17"
  },
  "engines": {
    "yarn": "YARN NO LONGER USED - use npm instead."
  }
}
