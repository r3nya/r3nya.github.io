---
// Props: { title?: string }
import '../styles/tailwind.css';
const { title = 'Andrey Makarov aka r3nya' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="bg-palette-1-light dark:bg-palette-1-dark">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="/style.css" rel="stylesheet" type="text/css" />
  </head>
  <body class="font-monocode text-base text-palette-2-light antialiased dark:text-palette-2-dark">
    <div class="container mx-auto px-4 max-w-4xl py-8 sm:px-6 sm:mt-4 lg:px-8">
      <main class="grid grid-cols-1 gap-8 md:grid-cols-3">
        <slot />
      </main>
    </div>
  </body>
</html>
