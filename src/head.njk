{% from "data.njk" import site, profile %}

<meta charset="utf-8" />
<title>{{ site.title }}</title>

{% if env.isProduction %}
  <meta
    http-equiv="Content-Security-Policy"
    content="default-src https: 'unsafe-inline'"
  />
{% endif %}

<meta name="description" content="{{ site.description }}" />
<meta name="author" content="{{ site.author }}" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="theme-color" content="{{ site.themeColor }}" />
<meta name="yandex-verification" content="{{ site.yandexVerification }}" />

{# Open Graph meta tags #}
<meta property="og:title" content="{{ site.title }}" />
<meta property="og:description" content="Yeah! It's my homepageâ€¦" />
<meta property="og:image" content="{{ profile.avatar }}" />
<meta property="og:type" content="profile" />
<meta property="profile:first_name" content="{{ profile.firstName }}" />
<meta property="profile:last_name" content="{{ profile.lastName }}" />
<meta property="profile:username" content="{{ profile.username }}" />
<meta property="profile:gender" content="{{ profile.gender }}" />

<link
  rel="apple-touch-icon"
  sizes="120x120"
  href="./apple-touch-icon.png"
/>
<link
  rel="icon"
  type="image/png"
  sizes="32x32"
  href="./favicon-32x32.png"
/>
<link
  rel="icon"
  type="image/png"
  sizes="16x16"
  href="./favicon-16x16.png"
/>
<link rel="shortcut icon" href="./favicon.ico" type="image/x-icon" />
<link rel="mask-icon" href="./safari-pinned-tab.svg" color="#5bbad5" />

<link href="./style.css" rel="stylesheet" type="text/css" />
