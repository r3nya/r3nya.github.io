---
import Icon from './Icon.astro';
import type { Messages } from '../i18n/messages';

interface Props {
  links: Messages['links'];
}

const { links }: Props = Astro.props;
---

<section
  class="col-span-1 grid gap-2"
  role="navigation"
  aria-label="Social links"
  data-section="links"
>
  {
    links.map((link) => (
      <a
        href={link.url}
        class="flex items-center text-2xl font-medium text-palette-5-light group md:text-3xl dark:text-palette-5-dark hover:text-palette-6-light dark:hover:text-palette-6-dark"
        aria-label={link.title}
        data-link={link.icon}
        rel="me noopener noreferrer"
        target="_blank"
      >
        <Icon name={link.icon} />
        <span class="group-hover:underline">{link.title}</span>
      </a>
    ))
  }
</section>
